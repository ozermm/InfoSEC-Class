<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
<div class="container">

    <div class="col-sm-4 col-sm-12 col-xs-12 col-sm-offset-4">

        <h1><span class="fa fa-sign-in"></span> Sign In</h1>

        <!-- show any messages that come back with authentication -->
        {{#if hasErrors}}
        <div class="alert alert-danger">
            {{# each messages }}
            <p>{{this}}</p>
            {{/each}}
        </div>
        {{/if}}

        <!-- LOGIN FORM -->
        <form action="login" method="post" id="comment_form">
            <div class="form-group">
                <label>Username</label>
                <input type="text" class="form-control" name="username" required style="border-radius:15px;" autofocus>
            </div>
            <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" required style="border-radius:15px;">
            </div>
            

            <input type="hidden" name="_csrf" value="{{ csrfToken }}">

            <button type="submit" id="gonder_beni" style="border-radius:15px; float:right;"
                class="btn btn-primary btn-lg">Sign In</button>

        </form>


       
        <hr>

        <a href="/password_reset">Forgot password?</a>
